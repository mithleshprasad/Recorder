{
  "manifest_version": 3,
  "name": "Pomodoro Timer Extension",
  "version": "1.0",
  "description": "A Pomodoro timer extension to help users stay focused and productive.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "permissions": ["activeTab"]
}
